<h2>Formulario para Borrar</h2>

<table class="tabla">
    <thead>
        <tr>
            <th>#ID</th>
            <th>Nombre</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        {{#each personas}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.tel}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<form action="/delete" method="POST">
    <input type="text" name="id" placeholder="Id">
    <button>Buscar para Borrar</button>
</form>